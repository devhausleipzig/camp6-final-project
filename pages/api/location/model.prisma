datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}
model Location {
identifier                   String    @id @default(uuid())
createdAt                   DateTime @default(now())   
updatedAt                   DateTime @updatedAt
postalAddressCountry        String
postalAddressRegion         String
postalAddresspostalCode     Int
postalAddressstreetAddress  String
latitude                    Float
longitude                   Float
books                       Book[] @relation("booklocation")
user                        User? @relation("userlocation")
}
model User {
  identifier     String   @id @default(uuid())
  location      Location? @relation("userlocation", fields: [locationId], references: [identifier])
  locationId    String @unique
}


model Book {
    identifier       String   @id @default(uuid())
    location                Location? @relation("booklocation", fields: [locationId], references: [identifier])
    locationId    String?
}

